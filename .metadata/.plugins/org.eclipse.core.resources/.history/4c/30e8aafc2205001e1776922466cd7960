package main;

import Objeto.OBJ_Bota;
import Objeto.OBJ_Cofre;
import Objeto.OBJ_Llave;

public class AssetSetter {
	
	PanelJuego pj;
	
	public AssetSetter(PanelJuego pj) {
		this.pj = pj;
	}
	
	public void setObjeto() {
		
		int mapNum = 0;
		
		pj.obj[mapNum][0] = new OBJ_Llave();
		pj.obj[mapNum][0].mundoX = 4 * pj.tamPantalla;
		pj.obj[mapNum][0].mundoY = 4 * pj.tamPantalla;
		
		pj.obj[mapNum][1] = new OBJ_Llave();
		pj.obj[mapNum][1].mundoX = 5 * pj.tamPantalla;
		pj.obj[mapNum][1].mundoY = 5 * pj.tamPantalla;
		
		pj.obj[mapNum][2] = new OBJ_Cofre();
		pj.obj[mapNum][2].mundoX = 5 * pj.tamPantalla;
		pj.obj[mapNum][2].mundoY = 8 * pj.tamPantalla;
		
		pj.obj[mapNum][3] = new OBJ_Bota();
		pj.obj[mapNum][3].mundoX = 8 * pj.tamPantalla;
		pj.obj[mapNum][3].mundoY = 8 * pj.tamPantalla;
	}
}